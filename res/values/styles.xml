<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="titlebar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="title" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="dashboard__item_icon">
        <item name="android:layout_marginLeft">17dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="dashboard_item_title" parent="android:Widget.TextView">
        <item name="android:gravity">left</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dashboard_item_number_today" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#51bcbf</item>
        <item name="android:textScaleX">0.8</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dashboard_item_icon_day">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="dashboard_item_number_yesterday" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#c2c6ca</item>
        <item name="android:textScaleX">0.8</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dashboard_item_chart">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="table_title_textview">
        <item name="android:gravity">center</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:textColor">#efefef</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="popupwindow">
        <item name="@android:windowEnterAnimation">@anim/anim_bottomright_to_topleft</item>
        <item name="@android:windowExitAnimation">@anim/anim_topleft_to_bottomright</item>
    </style>

    <style name="popupwindow_choose_time">
        <item name="@android:windowEnterAnimation">@anim/anim_top_bottom</item>
        <item name="@android:windowExitAnimation">@anim/anim_bottom_top</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="qrcode_desc_section_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">#43B2B9</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="qrcode_desc_section_content" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">#333333</item>
                <item name="android:textSize">14sp</item>
        
    </style>
</resources>