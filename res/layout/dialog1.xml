<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todaydata_gesture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- top -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/dialog1_imageview_1"
                android:layout_width="48dp"
                android:layout_height="35dp"
                android:background="@drawable/button_top" />
        </LinearLayout>

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="@string/filter"
            android:textSize="20sp" 
                android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog1_button_1"
                android:layout_width="50dp"
                android:layout_height="37dp"
                android:background="@drawable/button_top"
                android:text="@string/ok"
                android:textColor="#eeeeee" />
        </LinearLayout>
    </LinearLayout>
    <!-- content -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/dialog_view"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/dialog1_listview_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="#dddddd"
            android:dividerHeight="0.3dp"
            android:listSelector="@drawable/applist_midle_back" />
    </LinearLayout>

</LinearLayout>