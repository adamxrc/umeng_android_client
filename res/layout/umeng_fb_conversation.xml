<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/titlebar" >

        <TextView
            android:id="@+id/umeng_fb_conversation_title"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/UMFeedbackConversationTitle"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <com.umeng.fb.ui.ThreadView
        android:id="@+id/android:list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1.0"
        android:background="#EFEFEF"
        android:cacheColorHint="#EEEEEE"
        android:divider="#EFEFEF" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#d5d5d5" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#c6c6c6" />

    <RelativeLayout
        android:id="@+id/umeng_fb_bottom_sub"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/umeng_fb_bottom_banner"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/umeng_fb_editTxtFb"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="8dip"
            android:layout_toLeftOf="@+id/umeng_fb_btnSendFb"
            android:background="@drawable/edittext_bg_selector"
            android:maxLines="2"
            android:textColor="#737373" />

        <Button
            android:id="@+id/umeng_fb_btnSendFb"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/button_top"
            android:text="@string/UMFeedbackSummit"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>