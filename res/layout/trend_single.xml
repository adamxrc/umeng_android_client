<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trend_single"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!-- 1 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:background="@drawable/chart_back"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-1dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/today_new_add"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/trend_single_image_type"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/new_users" />

                <TextView
                    android:id="@+id/trend_single_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-2dp"
                    android:gravity="center_vertical"
                    android:text="@string/new_users"
                    android:textColor="#848484"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/trend_view_hidestate_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/trend_single_text_channel"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/trend_chose_state"
                        android:gravity="center_horizontal"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/trend_single_text_version"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/trend_chose_state"
                        android:gravity="center_horizontal"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="0.5dp"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="10sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_line"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="1dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/trend_single_gestrue"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/line_bg"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="5dp" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 2 -->

        <LinearLayout
            android:id="@+id/trend_list_long"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:background="@drawable/corners_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/addapplistview_1"
                android:layout_width="fill_parent"
                android:layout_height="23dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/table_title"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/table_title_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/time"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/trend_single_listview_title"
                        style="@style/table_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/new_user"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/trend_single_listview_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listback_view"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:dividerHeight="0.5dp"
                android:listSelector="#00000000"
                android:scrollingCache="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>