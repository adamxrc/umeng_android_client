<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeefef"
    android:orientation="vertical" >

    <!-- head -->

    <!-- 1 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:background="@drawable/chart_back"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="-2dp"
            android:layout_marginTop="-2dp"
            android:background="@drawable/chart_back"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/today_new_add"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/trend_single_image_type"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/trend_single_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/new_users"
                    android:textColor="#848484"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/trend_chose_state"
                    android:layout_gravity="center_vertical"
                     >
                     <RelativeLayout 
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="5dp"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="1dp"
                         android:layout_marginRight="5dp">
                    <TextView
                        android:id="@+id/text_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        tools:ignore="SmallSp" />                         
                     </RelativeLayout>
                </RelativeLayout>
 			<RelativeLayout
                    android:id="@+id/trend_view_hidestate"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/trend_chose_state"
                    android:layout_gravity="center_vertical"
                     >
                     <RelativeLayout 
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="5dp"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="1dp"
                         android:layout_marginRight="5dp">
                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:textColor="#ffffff"
                        android:textIsSelectable="false"
                        android:textSize="10sp"
                        android:layout_centerHorizontal="true"
                        tools:ignore="SmallSp" />                         
                     </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chart_line"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="7.5dp" >

                <LinearLayout
                    android:id="@+id/trend_single_gestrue"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/line_bg"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 2 -->
    <!-- 2 -->

    <LinearLayout
        android:id="@+id/trend_list_long"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/trend_list_long"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/addapplistview_1"
                android:layout_width="fill_parent"
                android:layout_height="23dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="-2dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/table_title"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/table_title_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/trend_single_listview_title"
                        style="@style/table_title_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="@string/new_user"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/trend_single_listview_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listback_view"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/listview_divider"
                android:dividerHeight="0.5dp"
                android:listSelector="#00000000"
                android:scrollingCache="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>